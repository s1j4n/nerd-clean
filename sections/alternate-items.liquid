{{ 'nerd-alternate-items.css' | asset_url | stylesheet_tag }}

<div class="nerd-container color-{{ section.settings.color_scheme }}">
  <ul class="nerd-page-width nerd--list-alternate">
    {% for block in section.blocks %}
      {% assign collection = block.settings.collection %}

      <li class="nerd--alternate-item">
        {% if collection %}
          {% if collection.featured_image %}
            {{
               collection.featured_image
             | image_url: width:collection.featured_image.width
             | image_tag: loading: 'lazy', class: 'nerd--alternate-image', style: styles }}
          {% else %}
            {{ 'product-1' | placeholder_svg_tag: "nerd--alternate-image" }}
          {% endif %}
          <div class="alternate--title nerd--text-md">{{ collection.title }}</div>
        {% else %}
          {{ 'product-1' | placeholder_svg_tag: "nerd--alternate-image" }}
          <div class="alternate--title nerd--text-md">Title</div>
        {% endif %}
      </li>

    {% else %}
      {% for i in (1..4) %}
      {{ 'product-1' | placeholder_svg_tag: "nerd--alternate-image" }}
      <div class="alternate--title nerd--text-md">Title</div>
        {% endfor %}
    {% endfor %}

  </ul>
</div>

{% schema %}
  {
    "name": "t:sections.alternate_items.name",
    "blocks": [
      {
        "name": "t:sections.alternate_items.blocks.name",
        "type": "item",
        "settings": [
          {
            "type": "collection",
            "id": "collection",
            "label": "t:sections.alternate_items.blocks.settings.collection.label"
          }
        ]
      }
    ],
    "settings": [
      {
        "type": "color_scheme",
        "id": "color_scheme",
        "default": "background-1",
        "label": "t:sections.all.colors.label"
      }
    ],
    "presets": [
      {
        "name": "t:sections.alternate_items.presets.name"
      }
    ]
  }
{% endschema %}