{% assign totalImages = section.blocks.size %}

{% case totalImages %}
  {% when 5 %}
    {% assign col1 = "grid-col-2-desktop" %}
    {% assign col2 = "grid-col-1-desktop" %}
  {% when 4 %}
    {% assign col1 = "grid-col-2-desktop" %}
    {% assign col2 = "grid-col-2-desktop" %}
  {% when 3 %}
    {% assign col1 = "grid-col-2-desktop" %}
    {% assign col2 = "grid-col-1-desktop" %}
  {% when 2 %}
    {% assign col1 = "grid-col-2-desktop" %}
    {% assign col2 = "grid-col-2-desktop" %}
  {% when 1 %}
    {% assign col1 = "grid-col-1-mobile" %}
    {% assign col2 = "" %}
{% endcase %}

<div class="nerd-grid-container">
  {% for block in section.blocks %}
    {% if forloop.index0 == 0 or forloop.index0 == 2 %}
      <div class="nerd-grid-row">
        <div class="nerd-grid-col {{ col1 }}">
          <img src="{{ block.settings.image | img_url: 'master' }}" alt="{{ block.settings.alt_text }}">
        </div>
    {% elsif forloop.index0 == 1 or forloop.index0 == 3 %}
        <div class="nerd-grid-col {{ col2 }}">
          <img src="{{ block.settings.image | img_url: 'master' }}" alt="{{ block.settings.alt_text }}">
        </div>
    {% else %}
        <div class="nerd-grid-col">
          <img src="{{ block.settings.image | img_url: 'master' }}" alt="{{ block.settings.alt_text }}">
        </div>
      </div>
    {% endif %}
  {% endfor %}
</div>

{% schema %}
  {
    "name": "t:sections.image_grid.name",
    "blocks": [
      {
        "name": "t:sections.image_grid.blocks.name",
        "type": "image",
        "limit": 5,
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "t:sections.image_grid.blocks.settings.image.label"
          },
          {
            "type": "range",
            "id": "image_opacity",
            "min": 10,
            "max": 100,
            "step": 10,
            "unit": "%",
            "default": 90,
            "label": "t:sections.image_grid.blocks.settings.opacity.label"
          },
          {
            "type" : "select",
            "id" : "content_position",
            "default" : "center",
            "label" : "t:sections.image_grid.blocks.settings.content.label",
            "options" : [
              {
                "value" : "top",
                "label" : "t:sections.image_grid.blocks.settings.content.options.top.label"
              },
              {
                "value" : "center",
                "label" : "t:sections.image_grid.blocks.settings.content.options.center.label"
              },
              {
                "value" : "bottom",
                "label" : "t:sections.image_grid.blocks.settings.content.options.bottom.label"
              }
            ]
          },
          {
            "type": "inline_richtext",
            "id": "title",
            "label": "t:sections.image_grid.blocks.settings.title.label"
          },
          {
            "type": "richtext",
            "id": "text",
            "label": "t:sections.image_grid.blocks.settings.text.label"
          }, {
            "type": "text",
            "id": "button_label",
            "label": "t:sections.image_grid.blocks.settings.button.label"
          },
          {
            "type": "text",
            "id": "button_link",
            "label": "t:sections.image_grid.blocks.settings.link.label"
          }
        ]
      }
    ],
    "settings": [

      {
        "type": "color_scheme",
        "id": "color_scheme",
        "default": "background-2",
        "label": "t:sections.all.colors.label"
      }
    ],
    "presets": [
      {
        "name": "Image grid new"
      }
    ]
  }
{% endschema %}